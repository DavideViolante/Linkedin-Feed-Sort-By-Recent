{
  "manifest_version": 2,

  "name": "Linkedin Feed Sort By Recent",
  "description": "Automatically set Sort by Recent on Linkedin feed.",
  "version": "1.2",
  "author": "Davide Violante",

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "browser_action": {
    "default_title": ""
  },
  "permissions": [],

  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*"
      ],
      "js": ["linkedinFeedSortByRecent.js"]
    }
  ],

  "web_accessible_resources": [
    "linkedinFeedSortByRecent.js"
  ]
}
